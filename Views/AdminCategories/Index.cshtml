@using Endterm_IPT.Models
@model List<Categories>

@{
    ViewBag.Title = "Admin Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f8;
    }

    h1 {
        font-size: 32px;
        margin-bottom: 20px;
        color: #2f3542;
        text-align: center;
    }

    .top-bar {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .add-category-btn {
        text-decoration: none;
        padding: 12px 24px;
        font-size: 16px;
        background-color: #1e90ff;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

        .add-category-btn:hover {
            background-color: #0c7cd5;
            transform: translateY(-2px);
        }

    /* New list container */
    .categories-list {
        max-width: 720px;
        margin: 0 auto;
        padding: 0;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    /* Each category row */
    .category-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 14px 20px;
        border-bottom: 1px solid #e0e0e0;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .category-row:hover {
            background-color: #f0f4ff;
        }

    .category-name {
        font-size: 18px;
        color: #2f3542;
        flex-grow: 1;
        word-break: break-word;
    }

    .card-actions {
        display: flex;
        gap: 10px;
        flex-shrink: 0;
    }

    .action-btn {
        padding: 6px 14px;
        font-size: 14px;
        border: none;
        border-radius: 6px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        color: white;
    }

    .edit-btn {
        background-color: #ffa502;
    }

        .edit-btn:hover {
            background-color: #e1a100;
            transform: translateY(-1px);
        }

    .delete-btn {
        background-color: #e74c3c;
    }

        .delete-btn:hover {
            background-color: #c0392b;
            transform: translateY(-1px);
        }

    {
        width: 90%;
    }

    .add-category-btn {
        width: 9.5%;
        padding: 12px;
    }

    }
</style>

<h1>Admin Categories</h1>

<div class="top-bar">
    <a class="add-category-btn" asp-route="showInsertForm">Add Category</a>
</div>

<div class="categories-list">
    @foreach (var category in Model)
    {
        <div class="category-row"
             onclick="location.href='@Url.Action("viewProducts", "AdminCategories", new { id = category.categoryId, name = category.categoryName })'">
            <div class="category-name">@category.categoryName</div>
            <div class="card-actions" onclick="event.stopPropagation();">
                <a class="action-btn edit-btn" asp-route="EditCategory" asp-route-id="@category.categoryId">Edit</a>
                <a class="action-btn delete-btn"
                   asp-route="DeleteCategory"
                   asp-route-id="@category.categoryId"
                   onclick="return confirm('Are you sure you want to delete this category?');">
                    Delete
                </a>
            </div>
        </div>
    }
</div>