@using Endterm_IPT.Models
@model Categories

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f8;
    }

    h1 {
        font-size: 32px;
        margin-bottom: 30px;
        color: #34495e;
        text-align: center;
        font-weight: 700;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        background: linear-gradient(to bottom right, #ffffff, #f7f9fc);
        padding: 35px 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        color: #2f3542;
        display: block;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        border-radius: 8px;
        padding: 12px 14px;
        font-size: 15px;
        border: 1px solid #ccc;
        transition: all 0.3s ease;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
    }

    .form-control:focus {
        border-color: #1e90ff;
        outline: none;
        box-shadow: 0 0 5px rgba(30, 144, 255, 0.4);
    }

    .text-danger {
        font-size: 13px;
        color: #e74c3c;
    }

    .btn-primary, .btn-secondary {
        padding: 10px 22px;
        font-size: 15px;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
        border: none;
    }

    .btn-primary {
        background-color: #1e90ff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0c7cd5;
    }

    .btn-secondary {
        background-color: #bdc3c7;
        color: #2f3542;
    }

    .btn-secondary:hover {
        background-color: #95a5a6;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-top: 25px;
    }
</style>

<h1>Edit Category</h1>

<div class="form-container">
    <form asp-route="UpdateCategory">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="categoryId" />
        <div class="form-group">
            <label asp-for="categoryName" class="control-label">Category Name</label>
            <input asp-for="categoryName" class="form-control" value="@Model.categoryName"/>
            <span asp-validation-for="categoryName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="categoryDescription" class="control-label">Category Description</label>
            <input asp-for="categoryDescription" class="form-control" value="@Model.categoryDescription" />
            <span asp-validation-for="categoryDescription" class="text-danger"></span>
        </div>

        <div class="btn-group">
            <input type="submit" value="Save" class="btn-primary" />
            <a asp-action="Index" class="btn-secondary">← Back to Categories</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
