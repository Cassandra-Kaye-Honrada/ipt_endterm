@model List<Endterm_IPT.Models.Product>

@{
    ViewData["Title"] = "Gadget Shop - Home";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background: #fff;
            margin: 0;
            padding: 0;
            color: #222;
        }

        .navbar {
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            position: sticky;
            top: 0;
            z-index: 1030;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.6rem;
            color: #e2231a;
        }

        .navbar-nav > li > a {
            font-weight: 600;
            color: #333;
            padding: 0.75rem 1rem;
        }

            .navbar-nav > li > a:hover,
            .navbar-nav > li > a:focus {
                color: #e2231a;
                text-decoration: none;
            }

        .dropdown-menu {
            min-width: 220px;
            border-radius: 0;
            border-color: #ddd;
        }

            .dropdown-menu a {
                font-size: 0.9rem;
                color: #333;
                padding: 0.5rem 1rem;
            }

                .dropdown-menu a:hover {
                    background-color: #f1f1f1;
                    color: #e2231a;
                }

        .form-control.search-input {
            max-width: 250px;
            border-radius: 20px 0 0 20px;
            height: 38px;
        }

        .btn-search {
            border-radius: 0 20px 20px 0;
            height: 38px;
            background-color: #e2231a;
            border: none;
            color: white;
            padding: 0 12px;
        }

            .btn-search:hover {
                background-color: #b21b15;
            }

        .hero-banner {
            position: relative;
            width: 100%;
            height: 500px;
            background-image: url('@Url.Content("~/images/ads.png")');
            background-position: center center;
            background-size: cover;
            display: flex;
            align-items: center;
            padding-left: 5rem;
            color: white;
        }

        .hero-banner-content {
            max-width: 550px;
        }

            .hero-banner-content h1 {
                font-size: 3.5rem;
                font-weight: 800;
                margin-bottom: 1rem;
                text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
            }

            .hero-banner-content p {
                font-size: 1.25rem;
                margin-bottom: 2rem;
                text-shadow: 1px 1px 7px rgba(0,0,0,0.6);
            }

            .hero-banner-content .btn-primary {
                background-color: #e2231a;
                border-color: #e2231a;
                padding: 0.75rem 2rem;
                font-weight: 700;
                font-size: 1.1rem;
            }

                .hero-banner-content .btn-primary:hover {
                    background-color: #b21b15;
                }

        .categories {
            margin: 3rem auto;
            max-width: 1200px;
            display: flex;
            justify-content: space-between;
            gap: 1rem;
            flex-wrap: wrap;
            padding: 0 1rem;
        }

        .category-card {
            flex: 1 1 22%;
            background: #f9f9f9;
            border-radius: 8px;
            text-align: center;
            box-shadow: 0 4px 6px rgb(0 0 0 / 0.1);
            padding: 1.5rem 1rem;
            cursor: pointer;
            transition: box-shadow 0.3s ease;
        }

            .category-card:hover {
                box-shadow: 0 8px 16px rgb(0 0 0 / 0.2);
                background: white;
            }

            .category-card img {
                max-height: 80px;
                margin-bottom: 0.75rem;
            }

            .category-card h5 {
                font-weight: 700;
                color: #e2231a;
                font-size: 1.2rem;
            }

        .featured-products-section {
            max-width: 1200px;
            margin: 3rem auto;
            padding: 0 1rem;
        }

            .featured-products-section h2 {
                font-weight: 700;
                margin-bottom: 1.5rem;
                color: #222;
                text-align: center;
            }

        .product-carousel {
            display: flex;
            gap: 1.5rem;
            overflow-x: auto;
            scroll-behavior: smooth;
            padding-bottom: 1rem;
        }

        .product-card {
            flex: 0 0 280px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgb(0 0 0 / 0.1);
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

            .product-card:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgb(0 0 0 / 0.2);
            }

            .product-card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
            }

        .product-card-body {
            padding: 1rem;
        }

        .product-card-title {
            font-weight: 700;
            font-size: 1.1rem;
        }

        .product-card-category {
            font-size: 0.85rem;
            color: #666;
        }

        .product-card-description {
            font-size: 0.9rem;
            color: #444;
        }

        .product-card-price {
            font-weight: 800;
            font-size: 1.25rem;
            color: #e2231a;
            margin-top: 1rem;
        }

        .product-carousel::-webkit-scrollbar {
            height: 8px;
        }

        .product-carousel::-webkit-scrollbar-thumb {
            background: #e2231a;
            border-radius: 4px;
        }

        .product-carousel::-webkit-scrollbar-track {
            background: #f0f0f0;
        }

        footer {
            background: #222;
            color: #bbb;
            padding: 3rem 1rem;
            margin-top: 3rem;
        }

            footer a {
                color: #bbb;
                text-decoration: none;
                margin: 0 0.75rem;
                font-size: 0.9rem;
            }

                footer a:hover {
                    color: #e2231a;
                    text-decoration: underline;
                }

            footer .footer-top {
                border-bottom: 1px solid #333;
                padding-bottom: 1rem;
                margin-bottom: 1.5rem;
                text-align: center;
                font-weight: 600;
                color: #eee;
            }

            footer .footer-links {
                display: flex;
                justify-content: center;
                flex-wrap: wrap;
                gap: 1rem;
            }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-banner">
        <div class="hero-banner-content">
            @* <h1>Level Up Your Tech</h1> *@
            @* <p>Explore top gadgets from smartphones to smartwatches—all in one place.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Shop Now</a> *@
        </div>
    </section>

    <!-- Featured Products -->
    <section class="featured-products-section">
        <div class="container mt-4">
            <div class="row mb-4 justify-content-center">
                <div class="col-md-6">
                    <input type="text" id="liveSearchInput" class="form-control" placeholder="Search products..." />
                </div>
            </div>
        </div>

        <h2>Find products you may like</h2>
        <div class="product-carousel" id="searchResults">
            @foreach (var product in Model)
            {
                <div class="product-card">
                    <img src="~/images/products/@(product.ProductId).jpg" alt="@product.ProductName" />
                    <div class="product-card-body">
                        <div class="product-card-title">@product.ProductName</div>
                        <div class="product-card-category">@product.CategoryName</div>
                        <div class="product-card-description">@product.Description</div>
                        <div class="product-card-price">₱@product.BasePrice.ToString("N2")</div>
                    </div>
                </div>
            }
        </div>

        <!-- Categories and their Products -->
        <div class="categories-products-section mt-5">
            @foreach (var categoryGroup in Model.GroupBy(p => p.CategoryName))
            {
                <div class="mb-4">
                    <h3 class="mb-3" style="color:#e2231a">@categoryGroup.Key</h3>
                    <div class="product-carousel">
                        @foreach (var product in categoryGroup)
                        {
                            <div class="product-card">
                                <img src="~/images/products/@(product.ProductId).jpg" alt="@product.ProductName" />
                                <div class="product-card-body">
                                    <div class="product-card-title">@product.ProductName</div>
                                    <div class="product-card-category">@product.CategoryName</div>
                                    <div class="product-card-description">@product.Description</div>
                                    <div class="product-card-price">₱@product.BasePrice.ToString("N2")</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

    </section>

    <!-- Footer -->
    <footer>
        <div class="footer-top">Gadget Shop &copy; @DateTime.Now.Year</div>
        <div class="footer-links">
            <a href="#">Privacy Policy</a>
            <a asp-controller="Static" asp-action="About">About</a>
            <a asp-controller="Static" asp-action="Contact">Contact</a>
            <a asp-controller="Static" asp-action="FAQs">FAQs</a>
        </div>
    </footer>

    <script>
        document.getElementById('liveSearchInput').addEventListener('input', function () {
            let query = this.value;
            if (query.trim() === "") {
                // If input is empty, clear the results
                document.getElementById('searchResults').innerHTML = "";
                return;
            }
            fetch(`/Home/SearchProducts?query=${encodeURIComponent(query)}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById('searchResults').innerHTML = html;
                });
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
