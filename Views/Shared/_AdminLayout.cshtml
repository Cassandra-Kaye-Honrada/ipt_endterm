<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f8;
        }

        header {
            background-color: #2f3542;
            color: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header .logo {
            font-size: 20px;
            font-weight: bold;
        }

        nav a {
            color: white;
            margin-left: 20px;
            text-decoration: none;
            font-size: 16px;
            transition: color 0.2s ease;
        }

        nav a:hover {
            color: #70a1ff;
        }

        main {
              padding: 40px;
        }
    </style>
</head>
<body>
    
    <header>
        <div class="logo">My Admin Panel</div>
        <nav>
            <a asp-controller="AdminDashboard" asp-action="AdminDashboard">Dashboard</a>
            <a asp-controller="Admin" asp-action="ProductIndex">Products</a>
            <a asp-controller="AdminCategories" asp-action="Index">Categories</a>
            <a asp-controller="Auth" asp-action="AdminLogout" onclick="return confirm('Are you sure you want to log out?');">Logout</a>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
