@{
    var userEmail = Context.Session.GetString("Email");
    var userName = Context.Session.GetString("FirstName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tesla</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tesla.styles.css" asp-append-version="true" />
    <style>
        .custom-navbar {
            background-color: #fff;
            padding: 1rem 2rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

            .custom-navbar .nav-link {
                color: #000;
                font-weight: 500;
                transition: color 0.2s ease;
            }

                .custom-navbar .nav-link:hover {
                    color: #e31837;
                    text-decoration: none;
                }

            .custom-navbar .btn-outline-dark {
                border-color: #000;
                color: #000;
            }

                .custom-navbar .btn-outline-dark:hover {
                    background-color: #e31837;
                    color: #fff;
                    border-color: #e31837;
                }

        .navbar-brand img {
            height: 40px;
        }

        .nav-right span {
            font-weight: 500;
            color: #333;
        }

        .nav-link.btn-link {
            color: #000;
        }

            .nav-link.btn-link:hover {
                color: #e31837;
            }
    </style>
</head>
<body>

    <header>
        <nav class="navbar custom-navbar">
            <div class="container">
                <div class="row w-100 align-items-center">
                    <!-- Left Nav -->
                    <div class="col d-flex gap-4">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link" asp-controller="Product" asp-action="ShowProducts">Products</a>
                        <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                    </div>

                    <!-- Center Logo -->
                    <div class="col text-center">
                        <a class="navbar-brand mx-auto" asp-controller="Home" asp-action="Index">
                            <img src="~/images/products/logo12.png" alt="Tesla Logo" />
                        </a>
                    </div>

                    <!-- Right Nav -->
                    <div class="col d-flex justify-content-end gap-3">
                        @if (string.IsNullOrEmpty(userEmail))
                        {
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">Log In</a>
                            <a class="btn btn-outline-dark btn-sm" asp-controller="Auth" asp-action="Register">Register</a>
                        }
                        else
                        {
                            <span>Hello, @userName!</span>
                            <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                <button type="submit" class="nav-link btn btn-link p-0">Logout</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </nav>

    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
