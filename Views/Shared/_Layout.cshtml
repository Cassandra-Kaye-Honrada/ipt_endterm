@{
    var username = Context.Session.GetString("FirstName");
    var isLoggedIn = !string.IsNullOrEmpty(username);
    var cartCount = Context.Session.GetInt32("CartCount") ?? 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electronics</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .navbar-custom {
            background-color: #4a9900;
        }

        .dropdown-menu {
            min-width: 240px;
            padding: 15px 20px;
            border-radius: 8px;
        }

        .dropdown-item {
            padding: 10px 12px;
            border-radius: 6px;
            transition: background-color 0.2s;
        }

            .dropdown-item:hover {
                background-color: #f1f1f1;
            }

            .dropdown-item i {
                width: 20px;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom p-2">
        <div class="container-fluid d-flex align-items-center">
            <a class="navbar-brand text-white fw-bold fs-3" asp-controller="Home" asp-action="Index">Electronics</a>

            <div class="d-flex align-items-center gap-3">
                <!-- Account Dropdown -->
                <div class="dropdown">
                    <a class="text-white text-decoration-none d-flex align-items-center dropdown-toggle"
                       href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person fs-5 me-1"></i>
                        @(isLoggedIn? username : "Sign in")
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end mt-2 p-3 border-0 shadow" aria-labelledby="accountDropdown">
                        <h1 class="text-success fw-bold px-2">Welcome!</h1>
                        <li><a class="dropdown-item d-flex align-items-center" asp-controller="Auth" asp-action="EditProfile"><i class="bi bi-person"></i> My Account</a></li>
                        <li><a class="dropdown-item d-flex align-items-center" asp-controller="Orders" asp-action="Index"><i class="bi bi-receipt"></i> View Order History</a></li>
                        <li class="mt-3">
                            @if (isLoggedIn)
                            {
                                <form method="post" asp-controller="Auth" asp-action="Logout">
                                    <button class="btn btn-outline-danger w-100 fw-bold" type="submit">Sign out</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-success w-100 fw-bold" asp-controller="Auth" asp-action="Login">Sign in/Create an account</a>
                            }
                        </li>
                    </ul>
                </div>

                <!-- Cart -->
                <a asp-controller="Cart" asp-action="Index" class="text-white position-relative">
                    <i class="bi bi-cart fs-4"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-white text-success">
                        @cartCount
                    </span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top text-muted text-center py-3">
        &copy; @DateTime.Now.Year - Electronics
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
