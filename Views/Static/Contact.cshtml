@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

<style>
    .contact-wrapper {
        background-color: #fff;
        border-radius: 1rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        padding: 3rem;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        border-color: #0d6efd;
    }

    .btn-dark {
        background-color: #212529;
        border: none;
        padding: 0.6rem 1.5rem;
        transition: background-color 0.3s ease;
    }

        .btn-dark:hover {
            background-color: #0d6efd;
            color: white;
        }

    .social-links a {
        color: #0d6efd;
        font-weight: 500;
        margin-right: 1rem;
        text-decoration: none;
    }

        .social-links a:hover {
            text-decoration: underline;
        }


    {
        padding-left: 3rem;
    }

    }
</style>

<div class="container my-5">
    <div class="contact-wrapper">
        <h2 class="mb-4 text-center fw-bold text-dark">Get in Touch with <span class="text-primary">Lenovo</span></h2>
        <div class="row align-items-stretch">
            <!-- Contact Form -->
            <div class="col-md-6 border-end contact-form">
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Your Name</label>
                        <input type="text" id="name" class="form-control" placeholder="Juan Dela Cruz" />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" class="form-control" placeholder="you@example.com" />
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea id="message" rows="5" class="form-control" placeholder="How can we help?"></textarea>
                    </div>
                    <div class="text-end">
                        <button class="btn btn-dark">Send Message</button>
                    </div>
                </form>
            </div>

            <!-- Spacer -->
            <div class="col-md-1 d-none d-md-block"></div>

            <!-- Store Info -->
            <div class="col-md-5 contact-gap">
                <h5 class="mb-3"> Store Location</h5>
                <p><strong>TechNova HQ</strong><br />123 Innovation Avenue<br />Makati City, Metro Manila</p>

                <h5 class="mt-4 mb-2"> Email</h5>
                <p>support@technova.ph</p>

                <h5 class="mt-4 mb-2"> Phone</h5>
                <p>(02) 1234-5678</p>

                <h5 class="mt-4 mb-2"> Follow Us</h5>
                <p class="social-links">
                    <a href="#">Facebook</a>
                    <a href="#">Instagram</a>
                    <a href="#">Twitter</a>
                </p>
            </div>
        </div>
    </div>
</div>
